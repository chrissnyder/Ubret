#ubret
  width 100%

  .dashboard
    margin-bottom 140px

    .tools
      padding 10px

      .window
        width: 800px
        position: relative
        padding: 10px
        padding-top: 20px
        border: 1px $black solid

        .settings
          visibility: hidden 

        .tool
          visibility: visible

        .window-controls
          position: absolute
          display: inline
          visibility: hidden
          top: 0
          left: 0

          ul
            display: inline

            li
              display: inline
              padding-right: 20px


      .window:hover .window-controls
        visibility: visible

      .window.settings-active

        .settings
          visibility: visible

        .tool
          visibility: hidden

  .toolbox
    border-top 1px $black solid
    background-color $white
    width 100%
    margin 0
    position fixed
    bottom 0
    left 0

    .tool
      float left
      padding 6px
      margin 6px
